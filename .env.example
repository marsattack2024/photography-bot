# Discord Configuration
# Bot Token (from Discord Developer Portal -> Bot -> Token)
DISCORD_BOT_TOKEN=your_bot_token_here
# Client ID (from Discord Developer Portal -> OAuth2)
DISCORD_CLIENT_ID=your_client_id_here
# Guild ID (Server ID for development/testing)
DISCORD_GUILD_ID=your_guild_id_here
# Bot command prefix
DISCORD_BOT_PREFIX=thrcbot

# OpenAI Configuration
# API Key (from OpenAI Dashboard)
OPENAI_API_KEY=your_openai_api_key_here
# Organization ID (optional)
OPENAI_ORG_ID=your_org_id_here
# Model to use for chat completions
OPENAI_MODEL=gpt-4-turbo

# Supabase Configuration
# Project URL (from Supabase Dashboard -> Project Settings -> API)
SUPABASE_URL=your_project_url_here
# Anon/Public Key (from API Settings)
SUPABASE_ANON_KEY=your_anon_key_here
# Service Role Key (from API Settings - for admin access)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Web Scraping Configuration
# Webhook secret for securing scraper endpoint
SCRAPER_WEBHOOK_SECRET=your_webhook_secret_here
# API Key for scraper service authentication
SCRAPER_API_KEY=your_scraper_api_key_here
# Puppeteer service endpoint
PUPPETEER_ENDPOINT=your_puppeteer_endpoint_here

# Database Configuration
# Maximum number of concurrent database connections
DB_MAX_CONNECTIONS=10
# Database operation timeout in milliseconds
DB_TIMEOUT=30000

# Logging Configuration
# Log level (debug, info, warn, error)
LOG_LEVEL=info
# Log format (json, pretty)
LOG_FORMAT=json

# Application Configuration
# Node environment (development, production, test)
NODE_ENV=development
# Server port
PORT=3000
# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=5
# Request timeout in milliseconds
REQUEST_TIMEOUT=60000

# Feature Flags
# Enable/disable specific features
ENABLE_FACEBOOK_ADS=true
ENABLE_GOOGLE_ADS=true
ENABLE_COPYWRITING=true
ENABLE_QUIZ=true
ENABLE_WEB_SCRAPING=true

# Rate Limiting
# Maximum requests per window
RATE_LIMIT_MAX=100
# Time window in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# Add other environment variables below as needed 